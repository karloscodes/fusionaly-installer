{
    admin 0.0.0.0:2019
    email {{.AdminEmail}}
    log {
        level INFO
        output file /data/logs/caddy.log {
            roll_size 50MiB
            roll_keep 5
            roll_keep_for 168h
        }
    }
    grace_period 30s
}

# HTTP (port 80)
{{.Domain}}:80 {
    # Caddy handles ACME challenges automatically
}

# HTTPS (port 443)
{{.Domain}}:443 {
    {{if eq .TLSConfig "internal"}}
    tls internal
    {{else}}
    tls {{.AdminEmail}}
    {{end}}
    encode zstd gzip
    
    file_server /assets/* {
        precompressed
    }
    
    reverse_proxy infinity-app-1:8080 infinity-app-2:8080 {
        health_uri /_health
        health_interval 10s
        health_timeout 5s
        health_status 200
        fail_duration 30s
        max_fails 2
        
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-For {http.request.remote.host}
        header_up Host {host}
        header_up User-Agent {http.request.user_agent}
        header_up Referer {http.request.uri}
        header_up Accept-Language {http.request.header.Accept-Language}

        flush_interval -1
    }
    
    log {
        output file /data/logs/{{.Domain}}-access.log {
            roll_size 50MiB
            roll_keep 5
            roll_keep_for 168h
        }
        format json
    }
    
    handle_errors {
        @5xx expression {http.error.status_code} >= 500 && {http.error.status_code} <= 599
        respond @5xx "Service temporarily unavailable" 503
    }
}
